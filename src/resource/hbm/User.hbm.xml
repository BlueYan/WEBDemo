<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.mark.project.hibernateDemo.domain">
    
    <class name="User" table="t_user_new">
        <id name="id" column="uid">
            <generator class="native"/>
        </id>
        <property name="name" column="uname"/>
        <property name="salary" column="usalary"/>
        <property name="hiredate" column="uhiredate"/>
    </class>
    
</hibernate-mapping>